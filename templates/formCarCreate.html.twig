{% extends "base.html.twig" %} {% block body %}
<div class="message">{{ message }} </div>
<h2>Création d'une voiture</h2>
<div class="form-container">
    <form method="post" action="addcar.php" name="userCreateForm">
        <div class=" form-group ">
            <label>Marque :</label>
            <input type="text" name="brand" class="form-control" placeholder="brand de la voiture">
        </div>
        <div class="form-group ">
            <label>Modèle :</label>
            <input type="text" name="model" class="form-control " placeholder="Model de la voiture">
        </div>
        <div class="form-group">
            <label for="color">Couleur :</label>
            <input type="text" name="color" class="form-control " placeholder="Color de la voiture">
        </div>
        <div class="form-group">
            <label for="nbrSlots">Nombre de places :</label>
            <input type="number" name="nbrSlots" class="form-control ">
        </div>
        <button type="submit " class="btn btn-primary ">Ajouter</button>
    </form>
    {% endblock %}